    3) cd /data/data/com.termux/files/usr/etc && echo -e "\e[32mBerpindah ke /usr/etc\e[0m";;
    *) echo -e "\e[31mPilihan folder tidak valid\e[0m";;
  esac
  ;;
  9)
    tools_alfa
    ;;
#!/bin/bash

# Warna
hijau="\e[32m"
kuning="\e[33m"
merah="\e[31m"
reset="\e[0m"

echo -e "${hijau}ğŸ”§ Memulai instalasi custom Termux by 4l_f4...${reset}"
sleep 1

# Update dan Upgrade Termux
echo -e "${kuning}ğŸ”„ Update & Upgrade package...${reset}"
pkg update -y && pkg upgrade -y

# Install paket yang dibutuhkan
echo -e "${kuning}ğŸ“¦ Menginstall semua dependency...${reset}"
pkg install -y figlet toilet lolcat curl python tsu termux-api

# Backup bash.bashrc lama
echo -e "${kuning}ğŸ“ Membackup bash.bashrc lama...${reset}"
cp /data/data/com.termux/files/usr/etc/bash.bashrc /data/data/com.termux/files/usr/etc/bash.bashrc_backup

# Pastikan file bash.bashrc custom ada di folder yang sama
if [ -f "bash.bashrc" ]; then
    cp bash.bashrc /data/data/com.termux/files/usr/etc/bash.bashrc
    echo -e "${hijau}âœ… File bash.bashrc baru berhasil diterapkan.${reset}"
else
    echo -e "${merah}âŒ File bash.bashrc tidak ditemukan di direktori ini.${reset}"
    exit 1
fi

# Buat folder backup otomatis jika belum ada
mkdir -p ~/.backup

# Selesai
echo -e "${hijau}âœ… Instalasi selesai! Silakan buka ulang Termux untuk melihat hasilnya.${reset}"
  *)
    echo -e "\e[31mâŒ Pilihan tidak valid!\e[0m"
    ;;
esac
  clear
  echo -e "\e[1;35m=== TOOLS KHUSUS 4l_f4 ===\e[0m"
  echo "1. Speedtest internet"
  echo "2. Cek dependency penting"
cek_dependency_penting() {
    dependencies=("curl" "git" "wget" "figlet" "lolcat" "neofetch")
    echo -e "\e[36mğŸ” Mengecek dependency penting...\e[0m"
    for dep in "${dependencies[@]}"; do
        if ! command -v $dep > /dev/null 2>&1; then
            echo -e "\e[31mâœ˜ $dep belum terinstal\e[0m"
        else
            echo -e "\e[32mâœ” $dep tersedia\e[0m"
        fi
    done
}
  echo "3. Navigasi folder favorit"
  echo "4. Cek status baterai ğŸ”‹"
  echo "5. Info sistem (neofetch) ğŸ’»"
  echo "6. Backup bashrc manual ğŸ“¦"
  echo "7. Kembali ke menu utama â†©ï¸"
  echo "8. Tools Pribadi Alfa ğŸ§°"
  read -p $'\e[1;36mğŸ‘‰ Pilih tools: \e[0m' pilih_tools

  case $pilih_tools in
    1)
  echo -e "\e[36mğŸš€ Menjalankan speedtest...\e[0m"
  clear
  speedtest-cli
  ;;
    2)
      cek_dependency_penting;;
    3)
      echo -e "\e[34mNavigasi ke /sdcard/Download...\e[0m"
      cd /sdcard/Download && ls
      ;;
    4)
      echo -e "\e[36mğŸ”‹ Menampilkan status baterai...\e[0m"
      termux-battery-status | jq
      ;;
    5)
      echo -e "\e[36mğŸ’» Menampilkan info sistem (neofetch)...\e[0m"
      neofetch
      ;;

    6)
      echo -e "\e[36mğŸ“¦ Menjalankan backup bash.bashrc manual...\e[0m"
      bash $HOME/backup_bashrc.sh
      ;;

    7)
      echo -e "\e[36mâ†©ï¸  Kembali ke menu utama...\e[0m"
      exec bash
      ;;
    8)
      echo -e "\e[1;35m=== TOOLS PRIBADI 4l_f4 ğŸ”§ ===\e[0m"
# ============================
# ğŸš€ Submenu Tools Pribadi Alfa
# ============================

tools_pribadi() {
    clear
    echo -e "\e[1;35m=== TOOLS PRIBADI 4l_f4 ===\e[0m"
    echo -e "\e[93m1. IP Tracker"
    echo -e "2. Auto Deface Tool"
    echo -e "3. Spam SMS Tool"
    echo -e "4. Kembali ke menu utama\e[0m"
    echo -e "5. Install tools dari GitHub"
    echo -e "6. Lihat daftar tools pribadi" 
    echo -e "7. Tambah tools ke daftar pribadi"
    echo -e "8. Hapus tools dari daftar pribadi"
    echo -e "9. Cek update tools pribadi"
    echo -e "10. ğŸ”„ Cek update tools pribadi dari GitHub"
    echo -e "11. ğŸ“– Lihat log aktifitas tools "
    echo -e "12. ğŸ” Restore Backup Otomatis"
    echo -e "13. ğŸ§¹ Bersihkan tools rusak dari daftar" 
    echo -e "14. ğŸ“¤ Export daftar ke JSON"
    echo -e "15 ğŸ“¥ Import daftar dari JSON"
    echo -e "16. Auto installer Tools " 
read -p $'\e[1;36mğŸ‘‰ Pilih tools pribadi: \e[0m' pilih_tool

    case $pilih_tool in
        1)
           if [ -f "$HOME/tools/ip-tracker.sh" ]; then
           bash "$HOME/tools/ip-tracker.sh"
           else
            echo -e "\e[31m[âœ˜] File tidak ditemukan!\e[0m"
           fi
        2)
            echo -e "\e[92m[âœ”] Menjalankan Auto Deface Tool...\e[0m"
            bash $HOME/tools/auto-deface.sh
            ;;
        3)
            echo -e "\e[92m[âœ”] Menjalankan Spam SMS Tool...\e[0m"
            bash $HOME/tools/spam-sms.sh
            ;;
        4)
            exec bash
            ;;
        5)
            read -p "Masukkan URL GitHub tools: " url
            git clone "$url" $HOME/tools/$(basename "$url" .git)
            echo -e "\e[32mâœ… Tools berhasil di-clone ke direktori tools\e[0m"
            sleep 1
            tools_pribadi
            ;;
        6)
            echo -e "\e[36mğŸ“‚ Daftar tools di $HOME/tools:\e[0m"
            ls $HOME/tools
            sleep 2
            tools_pribadi
            ;;
        7)
            read -p "Nama tools: " nama
            read -p "Path script tools (contoh: $HOME/tools/nama.sh): " path
            echo "$nama|$path" >> $HOME/.my_tools_list
            echo -e "\e[32mâœ… Tools ditambahkan!\e[0m"
            sleep 1
            tools_pribadi
            ;;
         8)
             echo -e "\e[33mğŸ“ Daftar tools pribadi:\e[0m"
             nl ~/.my_tools_list
             echo
             read -p $'\e[1;36mğŸ§¹ Masukkan nomor tools yang ingin dihapus: \e[0m' nomor
             if [[ $nomor =~ ^[0-9]+$ ]]; then
             sed -i "${nomor}d" ~/.my_tools_list
             echo -e "\e[32mâœ… Tools berhasil dihapus dari daftar.\e[0m"
             else
             echo -e "\e[31m[âœ˜] Input tidak valid!\e[0m"
             fi
             sleep 1
             tools_pribadi
             ;;
          9)
             if [ -f "$HOME/.my_tools_list" ]; then
             echo -e "\e[36mğŸ“œ Daftar tools pribadi:\e[0m"
             IFS=$'\n' read -d '' -r -a tools_array < "$HOME/.my_tools_list"
             for i in "${!tools_array[@]}"; do
             nama=$(echo "${tools_array[$i]}" | cut -d'|' -f1)
             echo -e "\e[93m[$((i+1))] $nama\e[0m"
             done

             echo
             read -p $'\e[1;36mğŸ‘‰ Pilih nomor tools yang ingin dijalankan: \e[0m' nomor
             if [[ "$nomor" =~ ^[0-9]+$ ]] && [ "$nomor" -le "${#tools_array[@]}" ]; then
             nama=$(echo "${tools_array[$((nomor-1))]}" | cut -d'|' -f1)
             path=$(echo "${tools_array[$((nomor-1))]}" | cut -d'|' -f2)

             if [ -f "$path" ]; then
                if [ -s "$path" ] && [ -x "$path" ]; then
                    echo -e "\e[92mğŸš€ Menjalankan $path...\e[0m"
                    echo "[`date '+%Y-%m-%d %H:%M'`] Menjalankan: $nama" >> "$HOME/.tools_log.txt"
                    termux-tts-speak "Menjalankan $nama"
                    bash "$path"
                else
                    echo -e "\e[91m[âœ˜] File rusak atau tidak bisa dieksekusi: $path\e[0m"
                    termux-tts-speak "File $nama rusak atau tidak bisa dijalankan"
                fi
              else
                echo -e "\e[91m[âœ˜] File tidak ditemukan: $path\e[0m"
                termux-tts-speak "File $nama tidak ditemukan"
             fi
             else
             echo -e "\e[91m[âœ˜] Input tidak valid!\e[0m"
             termux-tts-speak "Input tidak valid"
             fi
             else
             echo -e "\e[91m[âœ˜] File list ~/.my_tools_list belum ada!\e[0m"
             termux-tts-speak "Daftar tools pribadi belum tersedia"
             fi
             sleep 1
             tools_pribadi
             ;;
         10)
             echo -e "\e[36mğŸ”„ Mengecek update tools dari GitHub...\e[0m"
             if [ -d "$HOME/tools" ]; then
             for dir in "$HOME"/tools/*; do
             if [ -d "$dir/.git" ]; then
                echo -e "\e[33mğŸ“¦ Updating $(basename "$dir")...\e[0m"
                cd "$dir" && git pull
                echo
              fi
              done
              else
              echo -e "\e[91m[âœ˜] Direktori tools tidak ditemukan!\e[0m"
              fi
              sleep 2
              tools_pribadi
                ;;
          11)
echo -e "\e[36mğŸ“– Log Aktivitas Tools:\e[0m"
echo -e "[1] Tampilkan semua log"
echo -e "[2] Filter log berdasarkan tanggal"
echo -e "[3] Hapus seluruh log"
echo -e "[0] Kembali ke menu"

read -p $'\e[36mğŸ‘‰ Pilih opsi: \e[0m' log_opsi
case $log_opsi in
    1)
        if [ -f "$HOME/.tools_log.txt" ]; then
            echo -e "\n\e[93mğŸ“„ Isi log:\e[0m"
            cat "$HOME/.tools_log.txt"
        else
            echo -e "\e[91m[âœ˜] File log belum ada!\e[0m"
        fi
        ;;
    2)
        read -p $'\e[36mğŸ“… Masukkan tanggal (contoh: 2025-07-07): \e[0m' tanggal
        grep "$tanggal" "$HOME/.tools_log.txt" || echo -e "\e[91m[âœ˜] Tidak ada log untuk tanggal itu!\e[0m"
        ;;
    3)
        read -p $'\e[31mâš ï¸ Yakin ingin menghapus semua log? (y/n): \e[0m' konfirmasi
        if [[ "$konfirmasi" =~ ^[Yy]$ ]]; then
            rm -f "$HOME/.tools_log.txt"
            echo -e "\e[32mâœ… Log berhasil dihapus.\e[0m"
            termux-tts-speak "Log berhasil dihapus"
        else
            echo -e "\e[33mâ„¹ï¸ Penghapusan dibatalkan.\e[0m"
            termux-tts-speak "Penghapusan log dibatalkan"
        fi
        ;;
    0)
        tools_pribadi
	return
        ;;
    *)
        echo -e "\e[91m[âœ˜] Opsi tidak valid!\e[0m"
        ;;
esac

		sleep 2
		tools_pribadi
		;;
            12)
    		clear
    		echo -e "\e[95mğŸ” Memulai proses restore backup...\e[0m"
    		bash $HOME/restore_backup.sh
    		;;
            13)
               echo -e "\e[33mğŸ§¹ Mengecek dan membersihkan tools rusak...\e[0m"
               sleep 1
               temp_file="$HOME/.my_tools_temp"
               > "$temp_file"

               while IFS= read -r line; do
    		nama=$(echo "$line" | cut -d':' -f1)
    		path=$(echo "$line" | cut -d':' -f2)
    
    		if [ -f "$path" ] && [ -s "$path" ] && [ -x "$path" ]; then
        	echo "$line" >> "$temp_file"
    		else
        	echo -e "\e[91m[âœ˜] $nama dihapus (file rusak/kosong/tidak bisa dijalankan)\e[0m"
        	termux-tts-speak "Menghapus $nama, file tidak valid"
    		fi
		done < "$HOME/.my_tools_list"

		mv "$temp_file" "$HOME/.my_tools_list"
		echo -e "\e[92mâœ… Pembersihan selesai!\e[0m"
		termux-tts-speak "Pembersihan selesai"
		sleep 2
		tools_pribadi
		;;
	     14)
echo -e "\e[36mğŸ“¤ Mengekspor daftar tools ke JSON...\e[0m"
json_output="["
while IFS= read -r line; do
    nama=$(echo "$line" | cut -d':' -f1)
    path=$(echo "$line" | cut -d':' -f2)
    json_output="$json_output{\"nama\": \"$nama\", \"path\": \"$path\"},"
done < "$HOME/.my_tools_list"
json_output="${json_output%,}]"
echo "$json_output" > "$HOME/tools_backup.json"
echo -e "\e[92mâœ… Daftar berhasil diekspor ke: $HOME/tools_backup.json\e[0m"
termux-tts-speak "Daftar berhasil diekspor"
sleep 2
tools_pribadi
;;
    esac
}

# Jalankan loading palsu sebelum menu
for i in {1..3}; do
   echo -ne "\e[33mMemuat sistem"
   for j in {1..3}; do
      echo -ne "."
      sleep 0.3
   done
   echo -ne "\r"
   sleep 0.3
done
echo -e "\e[32mSelesai!\e[0m"
sleep 0.5
15)
echo -e "\e[36mğŸ“¥ Mengimpor daftar tools dari JSON...\e[0m"
if [ -f "$HOME/tools_backup.json" ]; then
    jq -r '.[] | "\(.nama):\(.path)"' "$HOME/tools_backup.json" > "$HOME/.my_tools_list"
    echo -e "\e[92mâœ… Daftar berhasil diimpor!\e[0m"
    termux-tts-speak "Daftar berhasil diimpor"
else
    echo -e "\e[91m[âœ˜] File JSON tidak ditemukan!\e[0m"
    termux-tts-speak "File JSON tidak ditemukan"
fi
sleep 2
tools_pribadi
;;
# ğŸ” Auto Sync tools_backup.json ke GitHub jika berubah
JSON_FILE="$HOME/tools_backup.json"
GIT_REPO="$HOME/backup_repo"  # Ganti sesuai lokasi repo kamu
GIT_LOG="$HOME/.backup/json_sync.log"

# Cek apakah file berubah
if [ -f "$JSON_FILE" ] && [ -d "$GIT_REPO" ]; then
    cp "$JSON_FILE" "$GIT_REPO/tools_backup.json"

    cd "$GIT_REPO" || exit
    git add tools_backup.json

    if ! git diff --cached --quiet; then
        TIMESTAMP=$(date '+%Y-%m-%d %H:%M:%S')
        git commit -m "Sync tools_backup.json ($TIMESTAMP)"
        git push origin main >> "$GIT_LOG" 2>&1
        termux-tts-speak "Sinkronisasi tools pribadi ke GitHub berhasil"
    fi
16)
    echo -e "\e[36mğŸ“¦ Menjalankan auto installer semua tools...\e[0m"
    sleep 1

    if [ -f "$HOME/.my_tools_list" ]; then
        while IFS= read -r line; do
            nama=$(echo "$line" | cut -d':' -f1)
            path=$(echo "$line" | cut -d':' -f2)

            echo -e "\n\e[36mğŸ” Mengecek: $nama ($path)\e[0m"

            if [ -f "$path" ]; then
                if [ ! -x "$path" ]; then
                    chmod +x "$path"
                    echo -e "\e[93mâ• Izin eksekusi ditambahkan ke $path\e[0m"
                fi

                echo -e "\e[92mğŸš€ Menjalankan installer: $nama\e[0m"
                echo "[AutoInstall $(date +'%F %T')] $nama" >> "$HOME/.tools_log.txt"
                termux-tts-speak "Menjalankan $nama"
                bash "$path"
            else
                echo -e "\e[91m[âœ˜] File tidak ditemukan: $path\e[0m"
                termux-tts-speak "File $nama tidak ditemukan"
            fi
            sleep 1
        done < "$HOME/.my_tools_list"
    else
        echo -e "\e[91m[âœ˜] Daftar tools pribadi tidak ditemukan!\e[0m"
        termux-tts-speak "File JSON tidak ditemukan"
    fi
    sleep 2
    tools_pribadi
    ;;
esac
done

# ğŸ” Auto Sync tools_backup.json ke GitHub jika berubah
JSON_FILE="$HOME/tools_backup.json"
GIT_REPO="$HOME/backup_repo"  # Ganti sesuai lokasi repo kamu
GIT_LOG="$HOME/.backup/json_sync.log"

# Cek apakah file berubah
if [ -f "$JSON_FILE" ] && [ -d "$GIT_REPO" ]; then
    cp "$JSON_FILE" "$GIT_REPO/tools_backup.json"
    cd "$GIT_REPO" || exit
    git add tools_backup.json

    if ! git diff --cached --quiet; then
        TIMESTAMP=$(date '+%Y-%m-%d %H:%M:%S')
        git commit -m "Sync tools_backup.json ($TIMESTAMP)"
        git push origin main >> "$GIT_LOG" 2>&1
        termux-tts-speak "Sinkronisasi tools pribadi ke GitHub berhasil"
