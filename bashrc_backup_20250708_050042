# =============================
# Efek Ketik Hacker ğŸ˜
# =============================
function ketik() {
    teks="$1"
    for ((i=0; i<${#teks}; i++)); do
        echo -n "${teks:$i:1}"
        sleep 0.03
    done
    echo
}

echo -e "\e[32m[âœ“] Cache dibersihkan!\e[0m"
sleep 0.5

# Efek Ketik sebelum menu
ketik "Menjalankan menu utama..."
