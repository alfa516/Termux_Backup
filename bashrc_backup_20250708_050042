cek_koneksi() {
  if ping -q -c 1 -W 1 google.com > /dev/null; then
    echo -e "\e[1;32mğŸŒ Koneksi internet: Aktif\e[0m"
  else
    echo -e "\e[1;31mâŒ Tidak ada koneksi internet!\e[0m"
  fi
}
backup_bashrc() {
  mkdir -p /sdcard/backup_termux
  cp /data/data/com.termux/files/usr/etc/bash.bashrc /sdcard/backup_termux/bash.bashrc_$(date +%Y%m%d_%H%M%S)
  echo -e "\e[1;32mâœ… Backup berhasil disimpan di /sdcard/backup_termux/\e[0m"
}
cek_ip_pub() {
  echo -e "\e[36mğŸŒ Mengambil IP publik...\e[0m"
  ip=$(curl -s https://ipinfo.io/ip)
  if [[ -n "$ip" ]]; then
    echo -e "\e[32mâœ… IP Publik kamu: $ip\e[0m"
  else
    echo -e "\e[31mâŒ Gagal mengambil IP publik!\e[0m"
  fi
}
download_sqlmap() {
  echo -e "\e[36mğŸ“¥ Mendownload sqlmap...\e[0m"
  git clone --depth 1 https://github.com/sqlmapproject/sqlmap.git ~/sqlmap 2>/dev/null

  if [ -d ~/sqlmap ]; then
    echo -e "\e[32mâœ… Sqlmap berhasil di-download ke ~/sqlmap\e[0m"
  else
    echo -e "\e[31mâŒ Gagal download sqlmap!\e[0m"
  fi
}
install_populer() {
  echo -e "\e[36mğŸ“¦ Menginstall package populer...\e[0m"
  pkg install -y curl git wget python figlet toilet ruby neofetch cmatrix
  pip install --upgrade pip
  gem install lolcat
  echo -e "\e[32mâœ… Semua package populer telah terinstal!\e[0m"
}
backup_bashrc() {
  folder="/sdcard/backup_termux"
  file="bash.bashrc_$(date +"%d-%m-%Y_%H-%M-%S")"

  mkdir -p "$folder"
  cp /data/data/com.termux/files/usr/etc/bash.bashrc "$folder/$file"

  if [ -f "$folder/$file" ]; then
    echo -e "\e[32mâœ… Backup berhasil disimpan di $folder/$file\e[0m"
  else
    echo -e "\e[31mâŒ Gagal menyimpan backup!\e[0m"
  fi
}
