# Fungsi Loading Palsu
loading() {
  for i in {1..3}; do
    echo -ne "\e[33mMemuat sistem"
    for j in {1..3}; do
      echo -ne "."
      sleep 0.3
    done
    echo -ne "\r"
    sleep 0.3
  done
  echo
  echo -e "\e[32mSelesai!\e[0m"
}

