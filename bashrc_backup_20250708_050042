# ==============================
# FUNGSI INFO BATERAI & SUHU ğŸ”‹ğŸŒ¡ï¸
# ==============================
info_baterai_suhu() {
  battery_level=$(termux-battery-status | grep level | awk '{print $2}' | tr -d ',')
  battery_status=$(termux-battery-status | grep status | awk '{print $2}' | tr -d '",')
  suhu=$(termux-battery-status | grep temperature | awk '{print $2}' | tr -d ',')

  echo -e "\e[33mğŸ”‹ Baterai: $battery_level% ($battery_status)"
  echo -e "ğŸŒ¡ï¸  Suhu: $suhuÂ°C\e[0m"
}
# ===============================
# FUNGSI DETEKSI JENIS KONEKSI ğŸŒ
# ===============================
cek_koneksi() {
  koneksi=$(ip route | grep -Eo 'wlan0|rmnet_data|eth0')

  if [[ $koneksi == "wlan0" ]]; then
    echo -e "\e[36mğŸŒ Koneksi: WiFi\e[0m"
  elif [[ $koneksi == "rmnet_data" ]]; then
    echo -e "\e[36mğŸ“¶ Koneksi: Data Seluler\e[0m"
  else
    echo -e "\e[31mâŒ Tidak terhubung ke jaringan!\e[0m"
  fi
}
# ============================
# AUTO TASK JADWAL OTOMATIS â°
# ============================
auto_task() {
  current_time=$(date +%H:%M)

  if [[ "$current_time" == "06:00" ]]; then
    echo -e "\e[33mğŸ”„ Auto update harian dimulai...\e[0m"
    pkg update -y && pkg upgrade -y
    echo -e "\e[32mâœ… Update selesai!\e[0m"
  fi
}
